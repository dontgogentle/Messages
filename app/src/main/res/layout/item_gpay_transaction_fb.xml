<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gpay_transaction_fb_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Row 1: Name and Net Amount -->
        <TextView
            android:id="@+id/gpay_transaction_fb_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gpay_transaction_fb_net_amount"
            tools:text="Party Name From CSV" />

        <TextView
            android:id="@+id/gpay_transaction_fb_net_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/gpay_transaction_fb_name"
            tools:text="₹1,000.00" />

        <!-- Row 2: Creation Time (Left) and Status (Right) -->
        <TextView
            android:id="@+id/gpay_transaction_fb_creation_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gpay_transaction_fb_name"
            app:layout_constraintEnd_toStartOf="@+id/gpay_transaction_fb_status"
            tools:text="21-07-2025 17:35:44" />

        <TextView
            android:id="@+id/gpay_transaction_fb_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gpay_transaction_fb_creation_time"
            app:layout_constraintBaseline_toBaselineOf="@+id/gpay_transaction_fb_creation_time"
            tools:text="SUCCESS" />

        <!-- Details Section (Initially GONE, toggle visibility on click) -->
        <LinearLayout
            android:id="@+id/gpay_transaction_fb_details_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone" 
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gpay_transaction_fb_creation_time"
            tools:visibility="visible">

            <TextView
                android:id="@+id/gpay_transaction_fb_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Transaction ID: " />
            <TextView
                android:id="@+id/gpay_transaction_fb_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="TXN123456789ABC" />
                
            <TextView
                android:id="@+id/gpay_transaction_fb_amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text="Amount: " />    
            <TextView
                android:id="@+id/gpay_transaction_fb_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="₹1050.00" />

            <TextView
                android:id="@+id/gpay_transaction_fb_payment_fee_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text="Payment Fee: " />
            <TextView
                android:id="@+id/gpay_transaction_fb_payment_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="₹50.00" />

            <TextView
                android:id="@+id/gpay_transaction_fb_payment_source_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text="Payment Source: " />
            <TextView
                android:id="@+id/gpay_transaction_fb_payment_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Google Pay" />

            <TextView
                android:id="@+id/gpay_transaction_fb_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text="Type: " />
            <TextView
                android:id="@+id/gpay_transaction_fb_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="UPI" />

            <TextView
                android:id="@+id/gpay_transaction_fb_update_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text="Update Time: " />
             <TextView
                android:id="@+id/gpay_transaction_fb_update_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="21-07-2025 17:36:00" />

            <TextView
                android:id="@+id/gpay_transaction_fb_notes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text="Notes: " />
            <TextView
                android:id="@+id/gpay_transaction_fb_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Some notes here" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
